@using ChildCentre.Slynchogled.Web.Models.Settings;
@model SettingsModel

<div class="container d-flex flex-column align-items-center mt-5">
    <h3 class="centre-violet-color">Системни настройки</h3>

    <div class="container my-5">
        <div class="row">
            <div class="mb-3 row">
                <label asp-for="Capacity" class="form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Capacity" class="form-control" readonly />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="WorkHours" class="form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="WorkHours" class="form-control" readonly />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="PricePerHourChildOnly" class="form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PricePerHourChildOnly" class="form-control" readonly />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="PricePerHourWithParent" class="form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PricePerHourWithParent" class="form-control" readonly />
                </div>
            </div>
        </div>
    </div>
</div>